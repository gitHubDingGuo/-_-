#bd {
	margin: 10px 30px 0;
    border-bottom: 0;
    position: relative;
    height: 100%;
    min-width: 1180px;
}
#bd-main {
	background-color: #fff;
    border: 1px solid #dfe7f1;
    border-radius: 5px;
    width: 100%;
   	height: 100%;
}
.cb {
	clear:both;
}
.module-share-header {
	border-bottom: 1px solid #f1f5fb;
}
.slide-show-header {
	margin-left: 15px;
   	padding: 15px 0 15px 5px;
}
.slide-show-left {
	float: left;
   	margin: 10px 0;
}
.slide-show-right {
	float: right;
    margin: 10px 30px;
    text-align: right;
}
.slide-show-other-infos {
    margin-top: 5px;
    position: relative;
    z-index: 40;
}
.g-button {
	display: inline-block;

	text-decoration: none;
    color: #3b8cff;
    border: 1px solid #c0d9fe;
    border-radius: 4px;
    height: 32px;
    line-height: 32px;
    padding-left: 10px;
    
    padding-right: 10px;
    text-align: center;
    cursor: pointer;
}
.g-button .text {
	font-size: 13px;
    margin-left: 2px;
    margin-right: 2px;
    vertical-align: baseline;
}
.share-file-info {
    background: url(/static/img/timer.png) left center no-repeat;
    float: left;
    padding-left: 20px;
}
#share_nofound_des {
    color: #424e67;
    text-align: center;
    padding: 200px 0;
    font-weight: 200;
    font-size: 14px;
}